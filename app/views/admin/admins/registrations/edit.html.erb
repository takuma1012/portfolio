<div id="sign-box">

<h2>Edit <%= resource_name.to_s.humanize %></h2>

<style>
  ul li{ list-style: none; }
</style>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    ※<%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "off", class: "single" %>
  </div><br>

  <div class="field">
    ※<%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "single" %>
  </div><br>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :パスワード変更 %><br />
    <%= f.password_field :password, autocomplete: "off", class: "double" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "double" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div><br>

  <div class="field">
    ※<%= f.label :現在のパスワード %><br />
    <%= f.password_field :current_password, autocomplete: "off", class: "single" %>
  </div><br>

  <div class="actions">
    <%= f.submit "Update", :class => "submit" %>
  </div><br>
<% end %>


<%= link_to "Back", :back %>
</div>