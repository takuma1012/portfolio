<div id="add-self">

<% if @interview.errors.any? %>
  <div>
    <ul>
      <% @interview.errors.full_messages.each do |message| %>
        <li style="list-style: none;"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

	<h2>新規インタビュー</h2>
	<%= form_for @interview, url: admin_interviews_path, method: :post do |f| %>
	<%= f.text_field :title, :placeholder => "タイトル", :size => "90%" %><br>
	<%= f.text_area :body, :rows => "40", :cols => "80", :placeholder => "本文" %><br>
	<button type="submit">投稿</button>
	<% end %>
</div>