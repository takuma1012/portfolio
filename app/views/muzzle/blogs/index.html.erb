<% if @blog.blank? %>

<div id="blog-box">
	<h1>Comming soon!!</h1>
</div>

<% else %>

	<% @blog.each do |blog| %>
		<div id="blog-box">
			<h3><%= blog.title %></h3>
			<hr width="100%">
			<p><%= simple_format(blog.body) %></p>
			<hr width="100%">
			<p class="date"><%= blog.created_at.strftime('%Y年%m月%d日 %H:%M') %></p>
			<%= link_to muzzle_blogs_path(id: blog.admin.id)  do %>
			<%= blog.admin.name %><% end %>
		</div>
	<% end %>
			<%= paginate @blog %>

<% end %>