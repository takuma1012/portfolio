<div id="sign-box">

<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field-single">
    <%= f.label :nick_name %><br />
    <%= f.text_field :nick_name, class: "single", required: true %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, class: "double", required: true %>
  </div>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, class: "double", required: true %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana %><br />
    <%= f.text_field :last_name_kana, class: "double", required: true %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana %><br />
    <%= f.text_field :first_name_kana, class: "double", required: true %>
  </div>

  <div class="field-single">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "single", required: true %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.label :mail_flg %><br>
  <%= f.check_box 'mail_flg', {}, false, true %>

  <div class="actions">
    <%= f.submit "編集", class: "submit" %>
  </div>
<% end %>

<p>退会は<%= link_to registration_path(resource_name), data: { confirm: "Are you sure?" }, class: "retire", method: :delete do %>こちら</p><% end %>

<%= link_to "Back", :back %>
</div>
